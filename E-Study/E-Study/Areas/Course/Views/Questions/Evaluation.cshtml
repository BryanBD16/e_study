@model EvaluationVM

<form asp-action="Evaluation" asp-controller="Questions" method="post">
    <input type="hidden" asp-for="CourseId" />

    @for (int i = 0; i < Model.Questions.Count; i++)
    {
        <div>
            <p>@Model.Questions[i].Text</p>
            <input type="hidden" name="Answers[@i].QuestionId" value="@Model.Questions[i].Id" />
            @foreach (var option in Model.Questions[i].AnswerOptions)
            {
                <label>
                    <input type="radio" name="Answers[@i].SelectedAnswerId" value="@option.Id" />
                    @option.Text
                </label>
            }
        </div>
    }

    <button type="submit">Soumettre</button>
</form>
